{
	"$schema": "https://dprint.dev/schemas/v0.json",
	"useTabs": true,
	"malva": {},
	"markup": {},
	"json": { "useTabs": true },
	"yaml": { "printWidth": 140 },
	"markdown": {
		"textWrap": "always",
		"emphasisKind": "asterisks",
		"associations": [".rules", "*.md", "CLAUDE.md", "AGENTS.md"]
	},
	"dockerfile": { "associations": ["Dockerfile", "Dockerfile.*"] },
	"biome": { "indentStyle": "tab", "lineWidth": 80, "quoteStyle": "single" },
	"exec": {
		"cwd": "${configDir}",
		"commands": [
			{
				"command": "bunx tombi format --stdin-filename {{file_path}} -",
				"exts": ["toml"]
			},
			// {
			// 	"command": "shfmt -i 0 -ln bash -bn -ci --filename {{file_path}}",
			// 	"exts": ["sh", "bash"]
			// },
			// {
			// 	"command": "bunx just --dump",
			// 	"fileNames": ["justfile"]
			// },
			{
				"command": "bunx sort-package-json --stdin",
				"fileNames": ["package.json"]
			},
			{
				"command": "bunx svgo --final-newline --pretty -q --input - --output -",
				"exts": ["svg"]
			}
		]
	},
	"excludes": ["**/node_modules", "**/bun.lock"],
	"plugins": [
		"https://plugins.dprint.dev/biome-0.11.13.wasm",
		"https://plugins.dprint.dev/dockerfile-0.3.3.wasm",
		"https://plugins.dprint.dev/exec-0.6.0.json@a054130d458f124f9b5c91484833828950723a5af3f8ff2bd1523bd47b83b364",
		"https://plugins.dprint.dev/g-plane/malva-v0.15.2.wasm",
		"https://plugins.dprint.dev/g-plane/markup_fmt-v0.25.3.wasm",
		"https://plugins.dprint.dev/g-plane/pretty_yaml-v0.6.0.wasm",
		"https://plugins.dprint.dev/json-0.21.1.wasm",
		"https://plugins.dprint.dev/markdown-0.21.1.wasm"
	]
}
