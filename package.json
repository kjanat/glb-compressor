{
	"name": "glb-compressor",
	"version": "1.0.2",
	"description": "Multi-phase GLB/glTF 3D model compression CLI, HTTP server & library",
	"keywords": [
		"glb",
		"gltf",
		"3d",
		"compression",
		"mesh",
		"meshopt",
		"meshoptimizer",
		"gltfpack",
		"draco",
		"webp",
		"avatar",
		"skinned",
		"animation",
		"texture",
		"cli",
		"server",
		"sse",
		"gltf-transform"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kjanat/glb-compressor.git"
	},
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/types/lib/mod.d.ts",
			"bun": "./dist/bun/lib/mod.js",
			"node": "./dist/node/lib/mod.js",
			"default": "./dist/node/lib/mod.js"
		},
		"./server": {
			"types": "./dist/types/server/main.d.ts",
			"bun": "./dist/bun-bytecode/server/main.cjs",
			"node": "./dist/node/server/main.js",
			"default": "./dist/node/server/main.js"
		},
		"./cli": {
			"types": "./dist/types/cli/main.d.ts",
			"bun": "./dist/bun-bytecode/cli/main.cjs",
			"node": "./dist/node/cli/main.js",
			"default": "./dist/node/cli/main.js"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/node/lib/mod.js",
	"types": "./dist/types/lib/mod.d.ts",
	"bin": {
		"glb-compressor": "dist/node/cli/main.js",
		"glb-server": "dist/node/server/main.js"
	},
	"files": [
		"dist/node/**/*.*js",
		"dist/bun/**/*.*js",
		"dist/bun-bytecode/**/*.{cjs,cjs.jsc}",
		"dist/types",
		"CHANGELOG.md",
		"skills"
	],
	"scripts": {
		"build": "bun build.ts",
		"check": "bunx --bun biome check",
		"cli": "bun --bun cli/main.ts",
		"dev": "bun --hot run server/main.ts",
		"fmt": "dprint fmt",
		"licences": "bunx license-checker --production --json --out licenses.json",
		"lint": "bunx --bun biome lint",
		"start": "bun --bun server/main.ts",
		"typecheck": "tsgo --noEmit"
	},
	"dependencies": {
		"@gltf-transform/core": "^4.3.0",
		"@gltf-transform/extensions": "^4.3.0",
		"@gltf-transform/functions": "^4.3.0",
		"draco3dgltf": "^1.5.7",
		"meshoptimizer": "^1.0.1",
		"sharp": "^0.34.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/bun": "^1.3.9",
		"@types/draco3dgltf": "^1.4.3",
		"@typescript/native-preview": "^7.0.0-dev.20260211.1",
		"dprint": "^0.51.1"
	},
	"packageManager": "bun@1.3.9",
	"engines": {
		"bun": ">=1.3",
		"node": ">=18.17.0"
	},
	"readme": "README.md"
}
