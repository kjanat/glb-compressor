{
	"name": "glb-compressor",
	"version": "0.0.0",
	"repository": "github:kjanat/glb-compressor",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/types/lib/mod.d.ts",
			"bun": "./dist/bun/lib/mod.js",
			"node": "./dist/node/lib/mod.js",
			"default": "./dist/node/lib/mod.js"
		},
		"./server": {
			"types": "./dist/types/server/main.d.ts",
			"bun": "./dist/bun-bytecode/server/main.js",
			"node": "./dist/node/server/main.js",
			"default": "./dist/node/server/main.js"
		},
		"./cli": {
			"types": "./dist/types/cli/main.d.ts",
			"bun": "./dist/bun-bytecode/cli/main.js",
			"node": "./dist/node/cli/main.js",
			"default": "./dist/node/cli/main.js"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/node/lib/mod.js",
	"types": "./dist/types/lib/mod.d.ts",
	"bin": {
		"glb-compress": "./dist/node/cli/main.js",
		"glb-server": "./dist/node/server/main.js"
	},
	"files": [
		"dist/node",
		"dist/bun",
		"dist/bun-bytecode",
		"dist/types"
	],
	"scripts": {
		"build": "bun build.ts",
		"check": "bunx --bun biome check",
		"cli": "bun --bun cli/main.ts",
		"dev": "bun --hot run server/main.ts",
		"fmt": "dprint fmt",
		"licences": "bunx license-checker --production --json --out licenses.json",
		"lint": "bunx --bun biome lint",
		"start": "bun --bun server/main.ts",
		"typecheck": "tsgo --noEmit"
	},
	"dependencies": {
		"@gltf-transform/core": "^4.3.0",
		"@gltf-transform/extensions": "^4.3.0",
		"@gltf-transform/functions": "^4.3.0",
		"draco3dgltf": "^1.5.7",
		"meshoptimizer": "^1.0.1",
		"sharp": "^0.34.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/bun": "^1.3.8",
		"@types/draco3dgltf": "^1.4.3",
		"@typescript/native-preview": "^7.0.0-dev.20260206.1",
		"dprint": "^0.51.1"
	},
	"packageManager": "bun@1.3.8",
	"engines": {
		"bun": ">=1.3",
		"node": ">=18"
	}
}
