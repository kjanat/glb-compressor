{
	"name": "@kjanat/glb-compressor",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"exports": {
		".": "./lib/mod.ts",
		"./server": "./server/main.ts",
		"./cli": "./cli/main.ts",
		"./package.json": "./package.json"
	},
	"bin": {
		"glb-compress": "./cli/main.ts",
		"glb-server": "./server/main.ts"
	},
	"files": [
		"cli",
		"lib",
		"server"
	],
	"scripts": {
		"check": "bunx --bun biome check",
		"cli": "bun --bun cli/main.ts",
		"dev": "bun --hot run server/main.ts",
		"fmt": "dprint fmt",
		"licences": "pnpm licenses ls --long --prod --json>licenses.json",
		"lint": "bunx --bun biome lint",
		"start": "bun --bun server/main.ts",
		"typecheck": "tsgo --noEmit"
	},
	"dependencies": {
		"@gltf-transform/core": "^4.3.0",
		"@gltf-transform/extensions": "^4.3.0",
		"@gltf-transform/functions": "^4.3.0",
		"draco3dgltf": "^1.5.7",
		"meshoptimizer": "^1.0.1",
		"sharp": "^0.34.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/bun": "^1.3.8",
		"@types/draco3dgltf": "^1.4.3",
		"@typescript/native-preview": "^7.0.0-dev.20260206.1",
		"dprint": "^0.51.1"
	},
	"packageManager": "bun@1.3.8",
	"engines": {
		"bun": ">=1.3"
	}
}
